<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="co.com.xoftix.spaservicios.mapper.ds.OficioMapper">

	<cache type="org.mybatis.caches.hazelcast.LoggingHazelcastCache"/>
	<sql id="selectFragment">
		select
			id as id
			,id_descriptor as idDescriptor
			,codigo as codigo
			,nombre as nombre
			,activo as activo
			,icono as icono
			,control as control
		from ds_oficio_v
	</sql>

	<sql id="whereFragment">
		<where>
			<if test="id !=null">
				id = #{id}
			</if>
			<if test="idDescriptor !=null">
				AND id_descriptor = #{idDescriptor}
			</if>
			<if test="codigo !=null">
				AND codigo like #{codigo}
			</if>
			<if test="nombre !=null">
				AND nombre like #{nombre}
			</if>
			<if test="activo !=null">
				AND activo = #{activo}
			</if>
			<if test="icono !=null">
				AND icono like #{icono}
			</if>
			<if test="control !=null">
				AND control like #{control}
			</if>
		</where>
	</sql>

	<select id="consultar" parameterType="Oficio"
		resultType="Oficio">
		<include refid="selectFragment" />
		<include refid="whereFragment" />
	</select>

	<select id="cantidadRegistros" parameterType="Oficio"
		resultType="int">
		select count(*)
		from ds_oficio_v
		<include refid="whereFragment" />
	</select>


</mapper>
